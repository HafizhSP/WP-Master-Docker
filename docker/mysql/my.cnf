[mysqld]
# matikan fitur yang makan RAM
performance_schema = OFF
# buffer InnoDB kecil saja
innodb_buffer_pool_size=128M
innodb_log_buffer_size=16M
innodb_log_file_size=64M
# batasi koneksi
max_connections=100
table_open_cache=400
# paket besar saat upload
max_allowed_packet=64M
# tmp table moderat
tmp_table_size=32M
max_heap_table_size=32M
# timeouts panjang biar gak putus
wait_timeout=28800
interactive_timeout=28800
